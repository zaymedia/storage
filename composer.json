{
    "name": "zaymedia/storage",
    "description": "storage",
    "authors": [
        {
            "name": "Zaytcev",
            "email": "zaydisk@yandex.ru"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require": {
        "php": "^8.1",
        "ext-exif": "*",
        "ext-gd": "*",
        "aws/aws-sdk-php": "^3.222",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.13",
        "illuminate/database": "~9.6",
        "james-heinrich/getid3": "^1.9",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.3",
        "php-ffmpeg/php-ffmpeg": "^1.0",
        "ramsey/uuid": "^4.3",
        "sentry/sdk": "^3.2",
        "slim/psr7": "^1.5",
        "slim/slim": "4.*",
        "symfony/validator": "^6.1",
        "zircote/swagger-php": "^4.4"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.3",
        "dms/phpunit-arraysubset-asserts": "^0.4.0",
        "doctrine/data-fixtures": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.8",
        "guzzlehttp/guzzle": "^7.2",
        "lctrs/psalm-psr-container-plugin": "^1.7",
        "overtrue/phplint": "^5.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.17.0",
        "roave/security-advisories": "dev-master",
        "vimeo/psalm": "^4.3"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "api\\": "todo/api/",
            "core\\": "todo/core/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "scripts": {
        "app": [
            "Composer\\Config::disableProcessTimeout",
            "php bin/app.php --ansi"
        ],
        "php-cs-fixer": "php-cs-fixer --config=.php-cs-fixer.php --allow-risky=yes",
        "lint": "phplint",
        "psalm": "psalm",
        "test": "phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --colors=always --coverage-html var/test/coverage"
    }
}
